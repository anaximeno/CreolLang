impristan "stdio.h"
impristan "stdbool.h"

void drawLine(int len, bool newLineAtEnd) {
    int i;

    di i = 0 ; i < len ; i = i + 1 {
        mostra("-");
    }

    si newLineAtEnd {
        mostra("\n");
    }
}

void printMessage() {
    int i = 1;

    nkuantu i < 10 {
        drawLine(i, sim);
        i = i + 1;
    }

    drawLine(i, nau);
    mostra("  Hello, Creol!\n");
    i = i - 1;

    nkuantu i > 0 {
        drawLine(i, sim);
        i = i - 1;
    }
}

int main() {
    printMessage();
}
